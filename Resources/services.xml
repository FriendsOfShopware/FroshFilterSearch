<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="frosh_filter_search.subscriber.template_registration" class="FroshFilterSearch\Subscriber\TemplateRegistration">
            <argument>%frosh_filter_search.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="frosh_filter_search.subscriber.frontend" class="FroshFilterSearch\Subscriber\Frontend">
            <argument type="service" id="shopware.plugin.cached_config_reader"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>